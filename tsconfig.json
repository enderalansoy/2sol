{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2022",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "../*": ["src/*"]
    },
    "rootDir": "./src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true

  },
  "extends": [],
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
